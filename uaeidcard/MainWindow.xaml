                                <TextBlock Margin="0,0,0,0" Name="CleanupToolkitError" Text="" 
                                                       FontFamily="Segoe UI" FontWeight ="Medium" FontSize="12" 
                                                       TextWrapping="Wrap" Foreground="RoyalBlue" Width="500" Height="33"
